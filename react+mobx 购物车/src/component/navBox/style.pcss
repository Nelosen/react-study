.navBox {
  position: relative;
  display: inline-block;
}



.navItem {
  display: inline-block;
  padding-bottom: 15px;

  & .navItemWrap {

    font-size: 24px;
    color: #686868;

    img {
      display: block;
      height: 88px;
      width: 88px;
      margin: 0 auto 10px;
    }

    span {
      display: block;
      width: 100%;
      text-align: center;
    }
  }
}